<%- include('../partials/header') %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Welcome, <%= user.name %>!</h1>
            <a href="/auth/logout" class="btn btn-outline-danger">Logout</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Profile Information</h5>
                <div class="mb-3">
                    <strong>Name:</strong> <%= user.name %>
                </div>
                <div class="mb-3">
                    <strong>Email:</strong> <%= user.email %>
                </div>
                <div class="mb-3">
                    <strong>Role:</strong> <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
                </div>
                <div class="mb-3">
                    <strong>Member Since:</strong> <%= new Date(user.createdAt).toLocaleDateString() %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Quick Actions</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a href="/training" class="btn btn-primary w-100">
                            <i class="fas fa-graduation-cap me-2"></i>
                            Browse Training Courses
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="/about" class="btn btn-outline-primary w-100">
                            <i class="fas fa-info-circle me-2"></i>
                            Learn About Us
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Recent Activity</h5>
                <p class="text-muted">No recent activity to display.</p>
                <p>Start by exploring our training programs or updating your profile information.</p>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 